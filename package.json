{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:api": "nest build api",
    "build:api:watch": "nest build api --watch",
    "build:api:prod": "NODE_ENV=production nest build api-prod",
    "build:cli": "nest build cli",
    "build:cli:watch": "nest build cli --watch",
    "build:cli:prod": "NODE_ENV=production nest build cli-prod",
    "start": "nest start",
    "start:api:dev": "nest start api --watch",
    "start:api:debug": "nest start api --debug --watch",
    "start:api:prod": "node dist/apps/api/main",
    "start:cli:dev": "nest start cli --watch",
    "start:cli:debug": "nest start cli --debug --watch",
    "start:cli:prod": "node dist/apps/cli/main",
    "format": "prettier --write \"apps/**/*.ts\" \"modules/**/*.ts\" \"utils/**/*.ts\"",
    "lint": "eslint \"{src,apps,modules}/**/*.ts\" --fix",
    "docs:venv": "sh ./scripts/venv.sh",
    "vtest": "vitest run",
    "vtest:watch": "vitest",
    "vtest:cov": "vitest run --coverage",
    "vtest:debug": "vitest --inspectBrk --inspect --logHeapUsage --no-file-parallelism",
    "vtest:e2e": "vitest run --config ./vitest.config.e2e.mts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "mongoose": "^8.2.4",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc/core": "^1.4.11",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.4.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "swc-loader": "^0.2.6",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "unplugin-swc": "^1.4.4",
    "vitest": "^1.4.0",
    "webpack": "^5.91.0",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/modules/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@modules/user(|/.*)$": "<rootDir>/modules/user/src/$1",
      "^defaultLibraryPrefix/abc(|/.*)$": "<rootDir>/libs/abc/src/$1",
      "^@app/mongo(|/.*)$": "<rootDir>/libs/mongo/src/$1"
    }
  }
}
