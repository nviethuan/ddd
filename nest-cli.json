{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "entryFile": "api/src/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": {
      "type": "swc",
      "options": {
        "swcrcPath": "apps/api/.swcrc"
      }
    },
    "typeCheck": true,
    "manualRestart": false,
    "tsConfigPath": "apps/api/tsconfig.app.json",
    "webpack": false
  },
  "monorepo": true,
  "root": "apps/api",
  "projects": {
    "api-prod": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "api/src/main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "deleteOutDir": true,
        "builder": {
          "type": "swc",
          "options": {
            "swcrcPath": "apps/api/.prod.swcrc"
          }
        },
        "typeCheck": true,
        "manualRestart": false,
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "api-relp": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "api/src/relp",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "deleteOutDir": true,
        "builder": {
          "type": "swc",
          "options": {
            "swcrcPath": "apps/api/.prod.swcrc"
          }
        },
        "typeCheck": true,
        "manualRestart": true,
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common",
      "compilerOptions": {
        "deleteOutDir": true,
        "tsConfigPath": "libs/common/tsconfig.lib.json",
        "builder": "tsc",
        "webpack": false,
        "assets": [
          {
            "include": "package.json",
            "outDir": "libs/common/dist"
          }
        ]
      }
    }
  }
}
